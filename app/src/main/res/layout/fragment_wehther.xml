<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.WeatherFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/linearL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15">

            <LinearLayout
                android:id="@+id/infoCardView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:background="#60000000"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="left">

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:id="@+id/year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="1395"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:id="@+id/month_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="مرداد"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:id="@+id/day_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="3dp"
                            android:text="4"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:id="@+id/day_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="یکشنبه"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/city_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="7dp"
                            android:includeFontPadding="false"
                            android:text="@string/تهران"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/location1" />


                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="#60000000"
                        android:gravity="center_horizontal"
                        android:padding="5dp">


                        <ImageView
                            android:id="@+id/main"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity=""
                            android:src="@drawable/sun" />

                        <TextView
                            android:id="@+id/mainText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="آفتابی"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/main_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="27"
                            android:textColor="@color/colorText"
                            android:textSize="100sp" />


                        <ImageView
                            android:id="@+id/degreeImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/celsius1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#60000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="5"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:text="%"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="رطوبت نسبی :"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:src="@drawable/small_mist" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:id="@+id/pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:text="11231.25"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="فشار:"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:src="@drawable/pressure" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#60000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">.

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:id="@+id/speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="2dp"
                            android:text="5"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="km/s"
                            android:textColor="@color/colorText"
                            android:textSize="14sp" />


                        <com.hp.alirezas.weather01.views.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="سرعت باد:"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:src="@drawable/wind" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:id="@+id/chill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="5dp"
                            android:text="25"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <com.hp.alirezas.weather01.views.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="دمای باد:"
                            android:textColor="@color/colorText"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:src="@drawable/thermometr" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#60000000"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.hp.alirezas.weather01.views.MyTextView
                        android:id="@+id/morning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:text="5:12"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />

                    <com.hp.alirezas.weather01.views.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="اذان صبح :"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#60000000"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.hp.alirezas.weather01.views.MyTextView
                        android:id="@+id/sunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:text="5:12"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />

                    <com.hp.alirezas.weather01.views.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="طلوع آفتاب :"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#60000000"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.hp.alirezas.weather01.views.MyTextView
                        android:id="@+id/noon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:text="5:12"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />

                    <com.hp.alirezas.weather01.views.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="اذان ظهر :"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#60000000"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.hp.alirezas.weather01.views.MyTextView
                        android:id="@+id/sunset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:text="5:12"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />

                    <com.hp.alirezas.weather01.views.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="غروب آفتاب :"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#60000000"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.hp.alirezas.weather01.views.MyTextView
                        android:id="@+id/west"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:text="5:12"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />

                    <com.hp.alirezas.weather01.views.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="اذان مغرب :"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#60000000"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    >


                    <com.hp.alirezas.weather01.views.MyTextView
                        android:id="@+id/midnight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="5dp"
                        android:text="5:12"
                        android:textColor="@color/colorText"
                        android:textSize="18sp" />

                    <com.hp.alirezas.weather01.views.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="نیمه شب شرعی :"
                        android:textColor="@color/colorText"
                        android:textSize="18sp"
                        />


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="#60000000"
            android:gravity="center">


            <com.hp.alirezas.weather01.views.MyTextView
                android:id="@+id/latest_update_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="3dp"
                android:text="95/5/4"
                android:textColor="@color/colorText"
                android:textSize="18sp" />

            <com.hp.alirezas.weather01.views.MyTextView
                android:id="@+id/latest_update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="22:14:5"
                android:textColor="@color/colorText"
                android:textSize="18sp" />



            <com.hp.alirezas.weather01.views.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:text="آخرین بروز رسانی نرم افزار :"
                android:textColor="@color/colorText"
                android:textSize="18sp" />

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>


</FrameLayout>
